    <Style x:Key="FocusVisualStyleTemplate">
        <Setter Property="Control.Template">
            <Setter.Value>
                <ControlTemplate>
                    <Grid Margin="{StaticResource Margin_XL_RightBottom}">
                        <Grid x:Name="normalFocus">
                            <Grid.Background>
                                <SolidColorBrush Color="{StaticResource UIBlueColor}" Opacity="0.2"/>
