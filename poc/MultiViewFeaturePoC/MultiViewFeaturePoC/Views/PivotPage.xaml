<Page
    x:Class="MultiViewFeaturePoC.Views.PivotPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:MultiViewFeaturePoC.Models"
    xmlns:views="using:MultiViewFeaturePoC.Views"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Pivot x:Uid="PivotPage">
            <PivotItem x:Uid="PivotItem_Scenario1">
                <Frame>
                    <views:Scenario1Page/>
                </Frame>
            </PivotItem>
            <PivotItem x:Uid="PivotItem_Scenario2">
                <Frame>
                    <views:Scenario2Page/>
                </Frame>
            </PivotItem>
            <PivotItem x:Uid="PivotItem_Scenario3">
                <Frame>
                    <views:Scenario3Page/>
                </Frame>
            </PivotItem>            
        </Pivot>
    </Grid>
</Page>
