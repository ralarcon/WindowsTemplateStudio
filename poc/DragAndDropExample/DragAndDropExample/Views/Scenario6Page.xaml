<Page
    x:Class="DragAndDropExample.Views.Scenario6Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:DragAndDropExample.Models"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">
    <Page.Resources>
        <DataTemplate x:Key="DropItemDataTemplate" x:DataType="models:CustomItem">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="100" />
                </Grid.RowDefinitions>
                <Image Source="{x:Bind Image}" />
                <StackPanel Grid.Column="2">
                    <TextBlock Text="{x:Bind FileName}" FontSize="16" FontWeight="Bold" />
                    <TextBlock Text="{x:Bind Path}" />
                </StackPanel>
            </Grid>
        </DataTemplate>
    </Page.Resources>
    <Grid
        x:Name="ContentArea"
        Margin="{StaticResource MediumLeftRightMargin}">

        <Grid.RowDefinitions>
            <RowDefinition x:Name="TitleRow" Height="48"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock
            x:Name="TitlePage"
            x:Uid="Scenario6_Title"
            Style="{StaticResource PageTitleStyle}" />


        <Grid Margin="20"
            Grid.Row="1" 
            Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <ListView  Background="LightSkyBlue"
                    AllowDrop="True" 
                    CanDragItems="True"
                    DragItemsStarting="ListView_DragItemsStarting"
                    DragOver="ListView_DragOver"
                    Drop="PrimaryListView_Drop"
                    ItemsSource="{x:Bind ViewModel.PrimaryItems}"
                    ItemTemplate="{StaticResource DropItemDataTemplate}">
            </ListView>

            <ListView Grid.Column="2" AllowDrop="True" Background="LightSeaGreen"
                    CanDragItems="True"
                    DragItemsStarting="ListView_DragItemsStarting"
                    DragOver="ListView_DragOver"
                    Drop="SecondaryListView_Drop"
                    ItemsSource="{x:Bind ViewModel.SecondaryItems}"
                    ItemTemplate="{StaticResource DropItemDataTemplate}">
            </ListView>
        </Grid>
    </Grid>
</Page>
